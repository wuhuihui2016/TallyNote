<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bkg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageButton
        android:id="@+id/pwdVisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:onClick="onClick"
        android:scaleType="centerInside"
        android:src="@drawable/eye_close_pwd" />

    <TextView
        android:id="@+id/edit_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdVisible"
        android:layout_centerHorizontal="true"
        android:hint="请验证6位密码"
        android:padding="10dp"
        android:textColor="@color/text_clolor" />

    <LinearLayout
        android:id="@+id/pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edit_tips"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/main_bkg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwd3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwd4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwd5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwd6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_pwd_stroke"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" />

    </LinearLayout>

    <GridView
        android:id="@+id/numGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center"
        android:numColumns="3"
        android:padding="10dp"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/num0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/number0" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/clear_pwd" />

    </LinearLayout>

</LinearLayout>