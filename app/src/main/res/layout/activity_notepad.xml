<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bkg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/note_tagTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_write"
        android:hint="请选择你想表达的标签"
        android:textColor="@color/app_color"
        android:textSize="@dimen/bigtextSize" />

    <com.whh.tallynote.view.FlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.whh.tallynote.view.CustomImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:scaleType="fitXY"/>

        <com.whh.tallynote.view.CustomImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"/>

        <com.whh.tallynote.view.CustomImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <EditText
        android:id="@+id/wordsEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_write"
        android:gravity="top|left"
        android:hint="这一刻的想法..."
        android:lines="10"
        android:maxLength="200"
        android:textSize="@dimen/bigtextSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/words_numTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0/200字"
            android:textColor="@color/darker_gray" />
    </RelativeLayout>

</LinearLayout>