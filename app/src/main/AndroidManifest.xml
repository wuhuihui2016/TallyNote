<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whh.tallynote">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 读取SD卡-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" /> <!-- 读取SD卡-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 读取网络状态-->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 连接网络 -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动 -->
    <uses-permission android:name="android.permission.GET_TASKS" /> <!-- 运行任务 -->

    <application
        android:name="com.whh.tallynote.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">

        <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <!-- 设置启动密码  -->
        <activity
            android:name="com.whh.tallynote.activity.SetOrCheckPwdActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name="com.whh.tallynote.activity.MainActivity"
            android:launchMode="singleTask" />

        <!-- GreenDao增删改查操作 -->
        <activity
            android:name="com.whh.tallynote.activity.GreenDaoTestActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />

        <!-- 记日账 -->
        <activity
            android:name="com.whh.tallynote.activity.NewDayActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />

        <!-- 记月账 -->
        <activity
            android:name="com.whh.tallynote.activity.NewMonthActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />

        <!-- 记理财 -->
        <activity
            android:name="com.whh.tallynote.activity.NewIncomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />

        <!-- 完成理财 -->
        <activity
            android:name="com.whh.tallynote.activity.FinishIncomeActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!-- 记录列表 -->
        <activity
            android:name="com.whh.tallynote.activity.DayListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.whh.tallynote.activity.MonthListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.whh.tallynote.activity.DayListOfMonthActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.whh.tallynote.activity.IncomeListActivity"
            android:launchMode="singleTop" />

        <!-- 导入导出 -->
        <activity android:name="com.whh.tallynote.activity.ImportExportActivity" />

        <!-- 设置手势密码 -->
        <activity android:name="com.whh.tallynote.activity.SetGestureActivity" />

        <!-- 安全设置 -->
        <activity
            android:name="com.whh.tallynote.activity.SecureSetActivity"
            android:theme="@style/mDialogStyle" />

        <!-- 计算日收益 -->
        <activity
            android:name="com.whh.tallynote.activity.CalculateActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- 日收益比较 -->
        <activity android:name="com.whh.tallynote.activity.CompareActivity" />

        <!-- 文件浏览 -->
        <activity android:name="com.whh.tallynote.activity.FileExplorerActivity" />


        <!-- 备忘录列表 -->
        <activity android:name="com.whh.tallynote.activity.MemoNoteListActivity" />
        <!-- 新建备忘录 -->
        <activity
            android:name="com.whh.tallynote.activity.NewMemoActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />
        <!-- 备忘录详情 -->
        <activity android:name="com.whh.tallynote.activity.MemoNoteDetailActivity" />


        <!-- 记事本列表 -->
        <activity android:name="com.whh.tallynote.activity.NotePadListActivity" />
        <!-- 新建记事本 -->
        <activity
            android:name="com.whh.tallynote.activity.NewNotePadActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />
        <!-- 记事本详情 -->
        <activity android:name="com.whh.tallynote.activity.NotePadDetailActivity" />

        <!-- 搜索 -->
        <activity android:name="com.whh.tallynote.activity.SearchActivity" />

        <!-- 筛选高额消费 -->
        <activity android:name="com.whh.tallynote.activity.HighConsumeDayListActivity" />

        <!-- 月账单记录分析统计 -->
        <activity android:name="com.whh.tallynote.activity.MonthNotesAnalyseActivity" />

        <!-- 本次月结的理财明细 -->
        <activity android:name="com.whh.tallynote.activity.IncomeList4UnRecordActivity" />

        <!-- 计数器 -->
        <activity android:name="com.whh.tallynote.activity.CounterActivity" />

        <!-- log文件浏览 -->
        <activity android:name="com.whh.tallynote.activity.LogExplorerActivity" />

    </application>

</manifest>